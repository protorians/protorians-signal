{
  "name": "@protorians/signalable",
  "version": "0.0.11",
  "description": "Signal's Events Manager",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsc --watch",
    "build": "pnpm run build:esm && pnpm run build:cjs",
    "build:esm": "tsc -p esm.tsconfig.json",
    "build:cjs": "tsc -p cjs.tsconfig.json",
    "build:types": "npm-dts generate -o ./globals.d.ts -c",
    "postinstall": "npx tsc -p esm.tsconfig.json && npx tsc -p cjs.tsconfig.json"
  },
  "exports": {
    "require": "./~cjs/index.js",
    "import": "./~esm/index.js",
    "default": "./index.ts"
  },
  "keywords": [
    "protorians",
    "signal",
    "event"
  ],
  "author": "Yannick GOBOU <protorians.dev@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "typescript": "^5.6.2"
  }
}
